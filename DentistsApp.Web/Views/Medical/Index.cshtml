@using DentistsApp.Web.ViewModels
@using GridMvc.Html

@model IQueryable<MedicalListViewModel>

@(Html.Grid(Model).Named("Medicals").Columns(columns =>
    {
        columns.Add(c => c.PatientName).Titled("Пациент").SetWidth(200).Css("grid-cell");
        columns.Add(c => c.DentistName).Titled("Зъболекар").SetWidth(200).Css("grid-cell");
        columns.Add(c => c.Diagnosis).Titled("Диагноза").SetWidth(200).Css("grid-cell");
        columns.Add(c => c.ToothDesctiption).Titled("Описание на зъба").SetWidth(200).Css("grid-cell");
        columns.Add(c => c.Treatment).Titled("Лечение").SetWidth(200).Css("grid-cell");
    })
    .WithPaging(10)
    .Sortable(true)
    .WithMultipleFilters()
)